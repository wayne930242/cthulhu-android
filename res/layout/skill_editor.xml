<?xml version="1.0" encoding="utf-8"?>

<TableRow xmlns:android="http://schemas.android.com/apk/res/android" 
	android:orientation="horizontal" android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:gravity="center_vertical"
>
	<Button android:id="@+id/skillBtnAddSkill" 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:background="@drawable/add"
		/>
	<CheckBox android:id="@+id/skillIsOccupational" 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" />
	<TextView android:id="@+id/skillName"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" />
	<org.xfon.m.coc.gui.CustomNumberPicker android:id="@+id/skillValue" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
	
</TableRow>